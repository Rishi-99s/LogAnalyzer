<Window x:Class="FirstProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:FirstProject.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        mc:Ignorable="d"
        Title="Log Analyzer"
        WindowStyle="None" ResizeMode="CanResize"
        Height="600" Width="900" MinWidth="800" MinHeight="450"
        Background="White">

    <!-- App-wide button style -->
    <Window.Resources>
        <Style x:Key="AppButton" TargetType="Button">
            <Setter Property="Background" Value="#7E99A3"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#A0C878"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Window template -->
    <Window.Template>
        <ControlTemplate TargetType="Window">

            <!-- Make styles available INSIDE the template -->
            <ControlTemplate.Resources>
                <Style x:Key="TitleBarButtonStyle" TargetType="Button">
                    <Setter Property="Background" Value="#7BB621"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#6AA317"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#5E9115"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D9534F"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#C9302C"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ControlTemplate.Resources>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title Bar -->
                <Grid Grid.Row="0" Background="#7BB621"
                      MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <TextBlock Text="{TemplateBinding Title}" Foreground="White"
                               FontSize="14" FontWeight="SemiBold"
                               VerticalAlignment="Center" Margin="12,0,0,0"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,6,0">
                        <Button Width="35" Height="30" Click="MinimizeButton_Click" Style="{StaticResource TitleBarButtonStyle}">
                            <Path Data="M0,8 L10,8 Z" Stroke="White" StrokeThickness="1.6"/>
                        </Button>
                        <Button Width="35" Height="30" Click="RestoreButton_Click" Style="{StaticResource TitleBarButtonStyle}">
                            <Path Data="M0,0 L10,0 10,10 0,10 Z" Stroke="White" StrokeThickness="1.8"/>
                        </Button>
                        <Button Width="35" Height="30" Click="CloseButton_Click" Style="{StaticResource TitleBarCloseButtonStyle}">
                            <Path Data="M0,0 L10,10 M10,0 L0,10" Stroke="White" StrokeThickness="1.8"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Content -->
                <Border Grid.Row="1" Background="{TemplateBinding Background}">
                    <ContentPresenter/>
                </Border>
            </Grid>
        </ControlTemplate>
    </Window.Template>

    <!-- MAIN CONTENT WITH TABS -->
    <Grid Margin="10" Background="White">
        <TabControl FontSize="16" Background="White">

            <!-- TAB 1: Manufacturing API -->
            <TabItem Header="Manufacturing API">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- File row -->
                    <Grid Grid.Row="0" Margin="0,8,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="8*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Browse File:" Foreground="Black"
                                   FontSize="18" Height="40" VerticalAlignment="Center"
                                   Margin="10,0,8,0"/>

                        <TextBox Grid.Column="1" Text="{Binding SelectedFilePath, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="16" Height="40" VerticalContentAlignment="Center"
                                 Margin="0,0,10,0"/>
                    </Grid>

                    <!-- Buttons -->
                    <Grid Grid.Row="1" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1" Content="Browse"
                                Command="{Binding BrowseCommand}" Margin="0,0,10,0"
                                Style="{StaticResource AppButton}"/>

                        <Button Grid.Column="2" Content="Download"
                                Command="{Binding DownloadCommand}" Margin="0,0,10,0"
                                Style="{StaticResource AppButton}"/>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- TAB 2: Tech Studio -->
             <TabItem Header="Tech Studio">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- File row -->
                    <Grid Grid.Row="0" Margin="0,8,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="8*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Browse File:" Foreground="Black"
                       FontSize="18" Height="40" VerticalAlignment="Center"
                       Margin="10,0,8,0"/>

                        <!-- Bind to TechStudioFilePath (not SelectedFilePath) -->
                        <TextBox Grid.Column="1"
                     Text="{Binding TechStudioFilePath, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="16" Height="40" VerticalContentAlignment="Center"
                     Margin="0,0,10,0"/>
                    </Grid>

                    <!-- Buttons -->
                    <Grid Grid.Row="1" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Bind to TechStudioBrowseCommand -->
                        <Button Grid.Column="1" Content="Browse"
                    Command="{Binding TechStudioBrowseCommand}" Margin="0,0,10,0"
                    Style="{StaticResource AppButton}"/>

                        <!-- Bind to TechStudioDownloadMfgCommand -->
                        <Button Grid.Column="2" Content="Download"
                    Command="{Binding TechStudioDownloadMfgCommand}" Margin="0,0,10,0"
                    Style="{StaticResource AppButton}"
                    IsEnabled="{Binding CanTechStudioRun}"/>
                    </Grid>
                </Grid>
            </TabItem>


            <!-- TAB 3: Settings -->
            <TabItem Header="Settings">
                <Grid Margin="16">
                    <TextBlock Text="Settings page (theme, preferences, etc.)"
                               FontSize="18" Foreground="Black"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
